<Page x:Class="Lekarna.Prihlaseni"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lekarna"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700" Background="White"
      Title="Prihlaseni">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="110,-30,110,-37"/>
        <StackPanel>
            <Label Content="Lékarna" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="30px"/>
            <Label Margin="0,30,0,0" Content="Přihlašovací jméno" HorizontalAlignment="Center"/>
            <TextBox Width="200px"/>
            <Label Margin="0,40,0,0" Content="Heslo" HorizontalAlignment="Center"/>
            <TextBox Margin="0,0,0,30"  Width="200px"/>
            <Button Width="100px" Height="30px" Content="Přihlásit" Click="Button_Click"/>
        </StackPanel>
        <Button Content="Přidat prodavače" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140px" Height="40px"></Button>
    </Grid>
</Page>
