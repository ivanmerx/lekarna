<Page x:Class="Lekarna.Rozcestnik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lekarna"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700"
      Title="Rozcestnik" Background="White">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="110,-30,110,-37"/>
        <StackPanel>
            <Label Content="Rozcestník" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="30px"/>
            <Button Content="Zákazníci" Margin="0,50,0,0" Width="250px" Height="50" Click="Button_Click_1"/>
            <Button Content="Léky" Margin="0,30,0,0" Width="250px" Height="50"/>
            <Button Content="Objednávky" Margin="0,30,0,0" Width="250px" Height="50" Click="Button_Click"/>   
            <Label Content="Přihlášen jako: + odhlasit button" Margin="110,50,0,0" HorizontalAlignment="Left" Width="250px"/>
        </StackPanel>
    </Grid>
</Page>
